<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 flex justify-center items-center min-h-screen">
    <div class="bg-white shadow-lg rounded-lg p-6 w-full max-w-md">
      <h1 class="text-2xl font-bold text-center text-blue-600 mb-4">
        URL Shortener
      </h1>

      <form action="/shorten" method="POST" class="flex flex-col gap-3">
        <input
          type="url"
          name="original"
          required
          placeholder="Enter URL"
          class="border border-gray-300 p-2 rounded-md focus:ring focus:ring-blue-300"
        />
        <button
          type="submit"
          class="bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition"
        >
          Shorten URL
        </button>
      </form>

      <h2 class="text-xl font-semibold mt-6 text-gray-700">Shortened URLs</h2>
      <ul class="mt-3 space-y-2">
        <% urls.forEach(url => { %>
        <li
          class="flex justify-between items-center bg-gray-200 p-2 rounded-md"
        >
          <a
            href="<%= url.short %>"
            target="_blank"
            class="text-blue-600 hover:underline"
          >
            <%= url.short %>
          </a>
          <span class="text-sm text-gray-500"><%= url.original %></span>
        </li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
